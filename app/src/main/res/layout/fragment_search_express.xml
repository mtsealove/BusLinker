<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SearchExpressFragment">

    <LinearLayout
        android:id="@+id/startLayout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:background="@drawable/set_terminal"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="출발지 검색"/>

        <TextView
            android:id="@+id/startTV"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/swapBtn"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/exchange_btn"/>

    <LinearLayout
        android:id="@+id/destinationLayout"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:background="@drawable/set_terminal"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착지 검색"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/destinationTV"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registrationDateLayout"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:clickable="true"
        android:background="@drawable/set_terminal"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="접수일"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/registrationDateTV"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/gray" />

    <Button
        android:id="@+id/requestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="조회하기"
        android:textSize="20sp" />

</LinearLayout>