<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SetInformationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--타이틀-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/panelBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/panel" />

            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bus_linker_icon" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:text="@string/app_name"/>
            </LinearLayout>

            <View
                android:layout_below="@id/panelBtn"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/gray" />
        </RelativeLayout>

        <!--정보가 많아 스크롤 적용-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--고속인지 시외인지 표시-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expressTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="고속버스"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/intercityTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="시외버스"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <!--출발 터미널-->
                <TextView
                    android:id="@+id/depTmnNmTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/set_terminal_normal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="동서울터미널"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!--보내는 사람-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="이름"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:clickable="true"
                        android:id="@+id/depPersonNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_input"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="연락처"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:clickable="true"
                        android:id="@+id/depPersonContactET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_input"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--도착 터미널-->
                <TextView
                    android:id="@+id/arrTmnNmTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/set_terminal_normal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="부산종합버스터미널"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <!--받는 사람-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="이름"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/arrPersonNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_input"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="연락처"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/arrPersonContactET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_input"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--배송정보-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/set_terminal_normal">

                    <TextView
                        android:id="@+id/deliveryInfoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="배송정보"
                        android:textColor="@color/gray_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/deliveryTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/deliveryInfoTV"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="2019년 5월 1일 13:20 ~ 17:35"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="-20dp"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/deliveryInfoTV"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/bus_kumho" />
                </RelativeLayout>

                <!--화물정보-->
                <LinearLayout
                     android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/set_terminal_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/gray_text"
                        android:text="화물정보"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/freightInfoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="가로: 50cm 세로 50cm 높이 50cm\n무게: 25kg"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <!--요금확인 및 결제수단 선택-->

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/checkPayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_list"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:text="요금확인 및 결제수단 선택"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <!--메시지 입력-->
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginVertical="10dp"
                    android:text="메시지 입력"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <kr.ac.gachon.www.buslinker.Views.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_gravity="start"
        android:layout_width="300dp"
        android:layout_height="match_parent">

    </kr.ac.gachon.www.buslinker.Views.SlideMenu>

</android.support.v4.widget.DrawerLayout>